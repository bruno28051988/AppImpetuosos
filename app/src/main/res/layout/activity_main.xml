<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1400dp"
    android:layout_height="900dp"
    android:layout_marginLeft="-297dp"
    tools:context=".SplashActivity"
    android:orientation="vertical"
    android:background="@drawable/campo">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="90dp"
        android:paddingLeft="-400dp"
        android:scaleType="center"
        app:srcCompat="@drawable/imagem2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="400dp"
        android:layout_height="38dp"
        android:fontFamily="casual"
        android:layout_marginLeft="300dp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:alpha="0.82"
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="350dp"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:hint="Login"
        android:background="@drawable/edit_box"/>

    <EditText
        android:alpha="0.82"
        android:id="@+id/editTextTextPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="350dp"
        android:background="@drawable/edit_box"
        android:textAlignment="center"
        android:ems="10"
        android:hint="Senha"/>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="440dp"
        app:srcCompat="@drawable/bola" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="468dp"
        android:layout_marginTop="-60dp"
        android:fontFamily="sans-serif"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textColor="#151515"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="425dp"
        app:srcCompat="@drawable/bola" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="-60dp"
        android:fontFamily="sans-serif"
        android:text="CADASTRAR"
        android:textAlignment="center"
        android:textColor="#151515"
        android:textSize="24dp"
        android:textStyle="bold" />


</LinearLayout>

